{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": false,
    "pretty": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.intl",
      "esnext.symbol",
      "DOM"
    ],
    "noImplicitAny": true,
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "exclude": [
    "tests"
  ]
}